{% extends '::backend.html.twig' %}

{% block container -%}

 <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            Listado de Clientes
                        </h1>
                        <ol class="breadcrumb">
                            <li>
                                <i class="fa fa-dashboard"></i>  <a href="{{ path("principal") }}">Dashboard</a>
                            </li>
                            <li class="active">
                                <i class="fa fa-customers"></i> Listado de Clientes
                            </li>
                        </ol>
                    </div>
                </div> <!-- row -->

                 <div class="row">
                    <div class="col-lg-3">
                        <button type="button" class="btn btn-primary" id="new_button" data-url="{{ path('customer_new') }}">Nuevo</button>
                     </div>
                     <div class="col-lg-4">
                          <form id="custom-search-form" class="form-search form-horizontal pull-right" action="#">
                            
                            <div class="form-group input-group">
                                <input type="text" class="form-control search-query" id="search-query" placeholder="Buscar" value="{{ search }}">
                                <span class="input-group-btn"><button class="btn btn-default" id="search-button" data-url="{{ path('customer') }}" type="button"><i class="fa fa-search"></i></button></span>
                            </div>
                           
                          </form>
                     </div> 
                 </div>
                    

                 <div class="row">
                    <div class="col-lg-12">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th {% if pagination.isSorted('u.Email') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Email', 'u.email') }}</th>
										<th>Nombre y Apellido</td>
                                        <th>Tipo Cliente</th>
                                        <th>Estado</th>
										<th>Validacion</th>
                                        <th style="width: 92px;">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                     {% for customer in pagination %}
                                       <tr>
                                            
                                                  <td>{{ customer.email }}</td>
                                                  <td>{{ customer.name ~ " " ~ customer.lastname }}</td>
												  <td>
                                                       {% if customer.isComercio  %}
													  	 Comercio
														{% else %} Comprador 
                                                       {% endif %} </td>
                                                  
                                                  <td>   {% if customer.isActive == 1 %} <span class="label label-success">Activo</span> {% else %} <span class="label label-danger">Inhabilitado</span>  {% endif %} </td>
                                                  
												  <td> {% if customer.getStatus.getName == "Pendiente" %}<span class="label label-warning">{{ customer.getStatus.getName }}</span>{% endif %}</td>
												  <td>
												  <a href="{{ path('customer_edit', { 'id': customer.id }) }}"><i class="fa fa-eye"></i></a>
                                                  <a href="{{ path('customer_edit', { 'id': customer.id }) }}"><i class="fa fa-pencil"></i></a>
                                                  <a href="#" class="btn confirm-delete"   data-toggle="modal" data-id={{ customer.id }}  data-target="#myModal"><i class="fa fa-trash"></i></a>
                                                  </td>
                                      </tr>
                                      
                                      {% endfor %}
                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                 </div>   
                <!-- /.row -->

                <div class="pagination">
                       {{ knp_pagination_render(pagination) }}
    
               </div>



    
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            <h4 class="modal-title" id="myModalLabel">Confirmar Borrado</h4>
            </div>
            <div class="modal-body">
                <p class="error-text">Esta seguro que desea borrar el cliente?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger" data-id="0"  data-url="{{ path('customer_delete', { 'id': 'id' }) }}">Borrar</button>
        </div>
    </div>
  </div>
</div>
    
    
    
    
    
    
    <form action="" id="delete-form" method="post" {{ form_enctype(delete_form) }}>
    {{ form_widget(delete_form) }}
    <input type="hidden" value="DELETE" name="_method">
    
    </form>
    
    
    {% endblock %}



{% block javascripts %}
  {{ parent() }}
   {% javascripts '@BackendCustomerBundle/Resources/public/js/customer_index.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
   {% endjavascripts %}
{% endblock %}
