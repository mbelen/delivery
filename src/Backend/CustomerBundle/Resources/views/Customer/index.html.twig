                <button type="button" class="btn btn-danger" data-id="0"  data-url="{{ path('customer_habilitar', { 'id': 'id' }) }}">Borrar</button>
        </div>
    </div>
  </div>
</div>

   <div class="modal fade" id="inhabilitarCustomer" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
