{% extends '::customer/backend.html.twig' %}

{% block container -%}
<h3>Carga Masiva</h3>


<div class="well">
    <div id="myTabContent" class="tab-content">
        <div class="tab-pane active in" id="home">
            <form class="form-horizontal" id="tab" name="tab" method="post" novalidate="true" {{ form_enctype(form) }}   action="{{ path('producto_create') }}" >
                {{ form_errors(form) }}
<div class="form-group">

    {{ form_label(form.sucursales,"Sucursales", { 'label_attr': {'class': 'control-label col-xs-2'} }) }}
    <i class="fa fa-comment" data-toggle="tooltip" data-placement="right" title="Sucursal en la cual vende el producto"></i>
    <div class="col-xs-6">
        {{ form_widget(form.sucursales, { 'attr': {'class': 'form-control'} }) }}
        <span id='backend_customeradminbundle_producto_sucursales_errorloc' class="help-block"> {{ form_errors(form.sucursales) }} </span>
    </div>
</div>

                {{ form_rest(form) }}

                <div class="form-group">
                    <!-- Button -->
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-plus"></i>Crear</button>
                        <button type="button" class="btn btn-inverse" data-url="{{ path('producto') }}"><i class="fa fa-chevron-left"></i> Volver</button>

                    </div>

                </div>
            </form>
        </div>

    </div>
</div>



{% endblock %}
{% block javascripts %}
    {{ parent() }}

    {% javascripts '@BackendCustomerAdminBundle/Resources/public/js/validate_producto.js' filter='?uglifyjs2' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}




{% endblock %}
