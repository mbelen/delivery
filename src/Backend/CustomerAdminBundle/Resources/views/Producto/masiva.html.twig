{% extends '::customer/backend.html.twig' %}

{% block container -%}
<h3>Carga Masiva</h3>


    <div class="well">
        <div id="myTabContent" class="tab-content">
            <div class="tab-pane active in" id="home">

                <div class="span12">
                    <form method="post" action="{{ path('producto_procesar') }}">
                        <label>Seleccione las sucursales</label>
                        <select class="span4" name="sucursal" id="sucursal" multiple style="width: 220px;">
                            <option value="0">Seleccione la sucursal</option>

                            {% for s in sucursales %}
                                <option value="{{ s.getId }}">{{ s.getName }}</option>
                            {% endfor %}
                        </select>

                       <input type="file" name="excel" id="excel">


                        <button class="btn btn-primary" type="submit" id="cargar">Cargar</button>
                    </form>
                </div>

            </div>

        </div>
    </div>



{% endblock %}
{% block javascripts %}
    {{ parent() }}

    {% javascripts '@BackendCustomerAdminBundle/Resources/public/js/validate_producto.js' filter='?uglifyjs2' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}




{% endblock %}
