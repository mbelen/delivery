{% extends '::customer/backend.html.twig' %}

{% block container -%}
    <h3>Nuevo Producto</h3>
    
   
    <div class="well">
    <div id="myTabContent" class="tab-content">
    <div class="tab-pane active in" id="home">
    <form class="form-horizontal" id="tab" name="tab" method="post" novalidate="true" {{ form_enctype(form) }}   action="{{ path('producto_create') }}" >
     {{ form_errors(form) }}
   

    
    {% include 'BackendCustomerAdminBundle:Producto:_producto.html.twig' %} 

    
    {{ form_rest(form) }}

    <div class="form-group">
    <!-- Button -->
    <div class="text-center">
    <button type="submit" class="btn btn-primary"><i class="fa fa-plus"></i>Crear</button>
    <button type="button" class="btn btn-inverse" data-url="{{ path('producto') }}"><i class="fa fa-chevron-left"></i> Volver</button>
    
    </div>
    
    </div>
    </form>
    </div>
    
     </div>
      </div>
    

       
{% endblock %}
{% block javascripts %}
  {{ parent() }}
 
{% javascripts '@BackendAdminBundle/Resources/public/js/validate_producto.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}


 <script type="text/javascript" src="{{ asset('js/tinymce/tinymce.min.js') }}"></script>
  <script type="text/javascript" src="{{ asset('js/tinymce/langs/es.js') }}"></script>
  <script type="text/javascript">
        tinymce.init({
            selector: "textarea",
            plugins: "paste",
            paste_word_valid_elements: "b,strong,i,em,h1,h2",
            setup: function (editor) {
                  editor.on('change', function () {
                    tinymce.triggerSave();
                });
            }
        });
    </script>

{% endblock %}
