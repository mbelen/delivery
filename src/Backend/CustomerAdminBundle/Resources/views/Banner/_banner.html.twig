<div class="form-group">

    {{ form_label(form.file,"Imagen (tama√±o recomendado: 1900x250 px)", { 'label_attr': {'class': 'control-label col-xs-2'} }) }}
    <div class="col-xs-6">
        {{ form_widget(form.file, { 'attr': {'class': 'input-xlarge'} }) }}
        <span id='backend_customeradminbundle_banner_file_errorloc' class="help-block"> {{ form_errors(form.file) }} </span>
    </div>
    {% if entity.getWebPath() %}
        <img src="{{ asset(entity.getWebPath()) }}" width="100" height="100" />
    {% endif %}
</div>

<div class="form-group">

    {{ form_label(form.sucursal,"Sucursal", { 'label_attr': {'class': 'control-label col-xs-2'} }) }}
