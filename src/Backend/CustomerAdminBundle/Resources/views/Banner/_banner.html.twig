    <div class="col-xs-6">
        {{ form_widget(form.sucursal, { 'attr': {'class': 'form-control'} }) }}
        <span id='backend_customeradminbundle_banner_sucursal_errorloc' class="help-block"> {{ form_errors(form.sucursal) }} </span>
    </div>
</div>

