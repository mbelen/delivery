{% extends '::front/base_front.html.twig' %}
{% block header %}
<header id="header_tienda" class="{{ tienda.getHeader() }}">
    <div class="container">
        <div class="row shop-bg">

            <div class="col-md-8">
                <div class="intro-text">

                    {% if tienda.getWebPath() %}
                        <img src="{{ asset(tienda.getWebPath()) }}" class="logo" />
                    {% endif %}

                    <div class="info">
                        <p class="shop-open">{% if tienda.getOpen() %}<span class="label label-success">Recibe pedidos estando cerrado</span>{% else %}<span class="label label-danger">No recibe pedidos estando cerrado</span>  {% endif %}</p>
                        <p class="shop-payment text-left">Medios de pago disponibles:</p>

                        <ul class="list-inline text-left payments-method">
                            {% for p in  tienda.getPaymethods() %}
                                <li>
                                    <img src="{{ p.getWebPath() }}" class="icon" title="{{ p.getName() }}">
                                </li>
                            {% endfor %}
                        </ul>
                        <p class="shop-delivery text-left">Tiempo de entrega estimado: {{ tienda.getTiempoEntrega() }}</p>
                        <p class="shop-delivery text-left">Servicio de delivery: {% if tienda.getDelivery() is null %} Sin cargo {% else %} {{ tienda.getDelivery() }}{% endif %}</p>
                        <p class="shop-delivery text-left">Pedido m√≠nimo: {% if tienda.getMinimo() is null %} -- {% else %}  {{ " $ " ~tienda.getMinimo() }} {% endif %}</p>
                    </div> <!-- info -->
                </div>
            </div>
            <div class="col-md-4">
                <div class="intro-text">
                    <p class="shop-title text-right">{{ tienda.getName() }}</p>
                    <p class="shop-address text-right">{{ tienda.getDireccion().getCalle() ~ " " ~ tienda.getDireccion().getNumero() }}</p>
                    <p class="shop-delivery text-right">Radio de entrega: {{ tienda.getRadio() }} km.</p>
                    <p class="shop-delivery text-right">Ver horarios</p>
                    <h3 class="shop-status label label-warning" data-url = "{{ path('frontend_checkTime') }}" id = "status" data-tienda = " {{ tienda.getId() }} "></h3>
                </div>
            </div>
        </div>

    </div>
</header> <!--<div style="width: 100%; height: 50px;"></div> -->
{% endblock %}

{% block container %}

    <div class="container">

        <!-- Title -->
        <div class="row">
            <div class="col-lg-12">
                <h2 class="subtitle">Nuestros productos</h2>
            </div>
        </div>
        <!-- /.row -->

        <!-- Page Features -->
        <div class="row text-center">
			{% for p in productos %}
            <div class="col-md-3 col-sm-6 hero-feature">
                <div class="thumbnail">
                    <img src="{{ p.getWebPath() }}" alt="">
                    <div class="caption">
                        <p class="product-title">{{ p.getName() }}</p>
                        <p class="product-desc">{{ p.getDescription }}</p>
                        <p class="product-title">$ {{ p.getPrecio() }}</p>
						<p class="product-desc">{% if p.getVariedades() is not empty %}<a href="#">Ver variedades</a>{% endif %}</p>  
						                    
                    </div>					
                    <p>
						<div class="center">
						  
						      <div class="input-group">
						          <span class="input-group-btn">
						              <button type="button" class="btn btn-warning btn-number"  data-type="minus" data-field="quant[2]">
						                <span class="glyphicon glyphicon-minus slider-minus" data-id="{{p.getId}}"></span>
						              </button>
						          </span>
						          <input type="text" name="quant[2]" class="form-control input-number" id="input-producto-{{p.getId}}" value="0" min="0" max="100">
						          <span class="input-group-btn">
						              <button type="button" class="btn btn-primary btn-number" data-type="plus" data-field="quant[2]">
						                  <span class="glyphicon glyphicon-plus slider-plus" data-id="{{p.getId}}" data-thumb="{{ p.getWebPath() }}" data-name="{{ p.getName() }}" data-price="{{ p.getPrecio() }}"></span>
						              </button>
						          </span>
						      </div>
							
						</div>
						
                    </p>
                </div>
            </div> <!-- product -->
			{% endfor %}

        </div>
        <!-- /.row -->

       </div>
    <!-- /.container -->
	  

	
{% endblock %}

                        