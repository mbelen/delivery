{% extends '::front/base_tienda.html.twig' %}

{% block container %}

    <div class="container">

        <!-- Title -->
        <div class="row">
            <div class="col-lg-12">
                <h2 class="subtitle">Nuestros productos</h2>
            </div>
        </div>
        <!-- /.row -->

        <!-- Page Features -->
        <div class="row text-center">
			{% for p in productos %}
            <div class="col-md-3 col-sm-6 hero-feature">
                <div class="thumbnail">
                    <img src="{{ p.getWebPath() }}" alt="">
                    <div class="caption">
                        <p class="product-title">{{ p.getName() }}</p>
                        <p>{{ p.getDescription }}</p>
                        <p class="product-title">$ {{ p.getPrecio() }}</p>
                        <p>
                            <a href="#" class="btn btn-primary">Agregar</a> <a href="#" class="btn btn-default">Mas Info</a>
                        </p>
                    </div>
                </div>
            </div>
			{% endfor %}

        </div>
        <!-- /.row -->

       </div>
    <!-- /.container -->

	
{% endblock %}